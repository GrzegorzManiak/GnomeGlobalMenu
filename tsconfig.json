{
	"compilerOptions": {
		"target": "esnext",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"dom"
		],
		"declaration": false,
		"noImplicitAny": true,
		"removeComments": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"sourceMap": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowJs": false,
		"moduleResolution": "node",
		"outDir": "./build",
		"strict": true,
		"types": [
			"bun-types",
			"node",
            "@girs/gio-2.0",
            "@girs/glib-2.0",
            "@girs/shell-13",
            "@girs/meta-13",
            "@girs/gnome-shell",
            "@girs/gobject-2.0"
		],
		"paths": {

		}
	}
}